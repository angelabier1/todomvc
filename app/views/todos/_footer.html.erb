<footer id="footer">
  <!-- This should be `0 items left` by default -->
  <span id="todo-count"><strong><%= pluralize(@all_todos.active.count, item)%></strong> left</span>
  <!-- Remove this if you don't implement routing -->
  <ul id="filters">
    <li>
      <%= link_to "All", todos_path %>
    </li>
    <li>
     <%= link_to "Active", active_todos_path %>
    </li>
    <li>
      <%= link_to "Completed", completed_todos_path %>
    </li>
  </ul>
  <!-- Hidden if no completed items are left â†“ -->
  <%= button_tag id: 'clear-completed', class: 'button' if @all_todos.completed.count > 0 %>
</footer>