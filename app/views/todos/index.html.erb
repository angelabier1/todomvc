
<section id="todoapp" class="<%= "has_todos" if @todos.active.count > 0%>">


  <header id="header">
    <h1>todos</h1>
    <%= form_for(Todo.new, remote: true) do |f| %>
        <%= f.text_field :item, placeholder: "What needs to be done?", id: "new-todo", autofocus: true %>
        <%= f.submit "Add todo", class: "button" %>
    <% end %>
  </header>


  <section id="main">
    <%= form_tag(toggle_all_todos_path, method: :post, remote: true) do %>
        <input name="completed" id="toggle-all" type="checkbox" value="true" data-behavior="submit_on_check" <%= "checked" if @todos.active.count == 0 %>>
    <% end %>
    <label for="toggle-all">Mark all as complete</label>
    <ul id="todo-list">
      <%= render @todos.all %>
    </ul>
  </section>


   <%= render "footer" if @todos.active.count > 0 %>


</section>


<footer id="info">
  <p>Double-click to edit a todo</p>
